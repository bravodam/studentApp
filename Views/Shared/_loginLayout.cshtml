<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/css/style.css" rel="stylesheet" />
    <script src="~/assets/js/bootstrap.min.js"></script>
    <title>@ViewBag.Title</title>
</head>
<body class="body">
    <nav class="navbar" id="myNav">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" asp-controller="home" asp-action="index">AdminStrap</a>
                <a class="navbar-brand navbar-right" asp-controller="Account" asp-action="register">Sign up</a>
                <a class="navbar-brand navbar-right" asp-controller="Home" asp-action="login">Sign in</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">

            </div>
            <!--/.nav-collapse -->
        </div>
    </nav>

    <header id="header">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <h1 class="text-center">Admin Area <small style="font-size: 20px">@ViewBag.Title</small></h1>
                </div>
            </div>
        </div>
    </header>
    <section id="main">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    @RenderBody()
                </div>
            </div>
        </div>
    </section>

    <footer id="footer">
        <p>Copyright <b>georgeebisike</b> &copy; 2020</p>
    </footer>
</body>
</html>
