@model IEnumerable<Project>

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewBag.Title = "create a Project";
}

<!-- website overview -->
<div class="panel panel-default">
    <div class="panel-heading main-color-bg">
        <h3 class="panel-title">Search and Add</h3>
    </div>
    <div class="panel-body">
        <div class="col-md-6">
            <form>
                <div class="form-group">
                    <input type="search" class="form-control" placeholder="search for a project by Email" id="userinput" />
                </div>
            </form>
        </div>        
    </div>
</div>

<!-- latest users -->
<div class="panel panel-default">
    <div class="panel-heading main-color-bg">
        <h3 class="panel-title">List of all projects in Registered in the System</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover" id="datatable">
            <thead>
                <tr>
                    <th>project Name</th>
                    <th>Project Status</th>
                    <th>Owned By</th>
                    <th>url</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var project in Model)
                {
                    <tr>
                        <td>@project.Name</td>
                        <td>@project.Project_Status</td>
                        <td><a href="#" data-toggle="modal" data-target="#addPage">@project.StudentId</a></td>
                        <td>@project.ProjectUrl</td>                       
                        <td><a class="glyphicon glyphicon-remove text-danger" asp-controller="project" asp-action="delete" asp-route-id="@project.Id"></a></td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

<!-- Add page modal -->
<div class="modal fade" id="addPage" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="model-header"></div>
            <div class="model-body"></div>

        </div>
    </div>
</div>

@section scripts{
    <script src="~/assets/js/bootstrap.min.js"></script>
}