@model RegisterViewModel

@{ 
    Layout = "~/Views/Shared/_loginLayout.cshtml";
    ViewBag.Title = "New User Registration";
}

<h1>iForm</h1>
<div class="row">
    <div class="col-md-12">
        <form asp-controller="Account" asp-action="Register" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" /><span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" /><span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" /><span asp-validation-for="ConfirmPassword"></span>
            </div>
            <div class="col-sm-6">
                <input type="submit" value="Register" class="btn btn-success"/>
            </div>
        </form>
    </div>
</div>