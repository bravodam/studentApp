@model employmentViewModel

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewBag.Title = "Create A Company";
}

<div class="panel panel-default">
    <div class="panel-heading main-color-bg">
        <h3 class="panel-title">Create a new Program</h3>
    </div>
    <form asp-controller="Employment" asp-action="Update" method="post" class="mt-3 panel-body">
        <input asp-for="compy_id" class="form-control" type="hidden" /><span class="text-danger" asp-validation-for="compy_id"></span>

        <div class="form-group row">
            <label asp-for="compy_name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="compy_name" class="form-control" /><span class="text-danger" asp-validation-for="compy_name"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="contactPerson" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="contactPerson" class="form-control" /><span class="text-danger" asp-validation-for="contactPerson"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Address" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Address" class="form-control" /><span class="text-danger" asp-validation-for="Address"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-6"><button type="submit" class="form-group btn btn-success">update Company</button></div>
        </div>
    </form>
</div>