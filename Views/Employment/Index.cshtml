@model IEnumerable<Company>

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewBag.Title = "Company List";
}

<!-- website overview -->
<div class="panel panel-default">
    <div class="panel-heading main-color-bg">
        <h3 class="panel-title">Search and Add</h3>
    </div>
    <div class="panel-body">
        <div class="col-md-6">
            <form>
                <div class="form-group">
                    <input type="search" class="form-control" placeholder="search for a program by Email" id="userinput" />
                </div>
            </form>
        </div>
        <div class="col-md-3"><a asp-controller="employment" asp-action="addCompany" class="btn btn-primary">Add company</a></div>
        <div class="col-md-3">@*<a asp-controller="program" asp-action="addStudentprogram" class="btn btn-primary">Asign program</a>*@</div>
    </div>
</div>

<!-- latest users -->
<div class="panel panel-default">
    <div class="panel-heading main-color-bg">
        <h3 class="panel-title">List of all programs in Registered in the System</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover" id="datatable">
            <thead>
                <tr>
                    <th>Company Name</th>
                    <th>Address</th>
                    <th>Contact Person</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var company in Model)
                {
                    <tr>
                        <td>@company.CompName</td>
                        <td>@company.Address</td>
                        <td>@company.ContactPerson</td>
                        @*<td><a class="glyphicon glyphicon-eye-open" asp-controller="program" asp-action="FullView" asp-route-id="@program.Id"></a></td>*@
                        <td><a class="btn btn-success" asp-controller="employment" asp-action="assignStudentCompany" asp-route-id="@company.ID">assign student</a></td>
                        <td><a class="btn btn-warning" asp-controller="employment" asp-action="update" asp-route-id="@company.ID">edit</a></td>
                        <td><a class="btn btn-danger" asp-controller="employment" asp-action="delete" asp-route-id="@company.ID">Delete</a></td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>