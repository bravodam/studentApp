@model employmentViewModel
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewBag.Title = "Assign";
}

<div class="panel panel-default">
    <div class="panel-heading main-color-bg">
        <h3 class="panel-title">Asign a Student a Batch</h3>
    </div>
    <form asp-controller="Employment" asp-action="assignStudentCompany" method="post" class="mt-3 panel-body">
        <input asp-for="compy_id" class="form-control" type="hidden" /><span class="text-danger" asp-validation-for="compy_id"></span>
        <div class="col-md-6">
            
            <div class="form-group row">
                <label asp-for="selectedStudent" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    @Html.DropDownList("selectedStudent", new SelectList(Model.studentlist.Select(x => new { Value = x.ID, Text = x.FirstName }), "Value", "Text"))
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-6"><button type="submit" class="form-group btn btn-success">Asign company</button></div>
            </div>
            <div class="form-group row">
                <div class="col-sm-6"><button asp-controller="Employment" asp-action="Index" class="form-group btn btn-primary">Back</button></div>
            </div>
        </div>

        <div class="col-md-6">
            
            <div class="form-group row">
                <label asp-for="StartDate" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10"><input asp-for="StartDate" class="form-control" /></div>
            </div>
            
        </div>
    </form>
</div>