@model IEnumerable<Programme>

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewBag.Title = "Program List";
}

<!-- website overview -->
<div class="panel panel-default">
    <div class="panel-heading main-color-bg">
        <h3 class="panel-title">Search and Add</h3>
    </div>
    <div class="panel-body">
        <div class="col-md-6">
            <form>
                <div class="form-group">
                    <input type="search" class="form-control" placeholder="search for a program by Email" id="userinput" />
                </div>
            </form>
        </div>
        <div class="col-md-3"><a asp-controller="program" asp-action="addProgram" class="btn btn-primary">Add program</a></div>
        <div class="col-md-3">@*<a asp-controller="program" asp-action="addStudentprogram" class="btn btn-primary">Asign program</a>*@</div>
    </div>
</div>

<!-- latest users -->
<div class="panel panel-default">
    <div class="panel-heading main-color-bg">
        <h3 class="panel-title">List of all programs in Registered in the System</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover" id="datatable">
            <thead>
                <tr>
                    <th>program Name</th>
                    <th>Program Duration</th>
                    <th>Program Cost</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var program in Model)
                {
                    <tr>
                        <td>@program.Program_Name</td>
                        <td>@program.Duration</td>
                        <td>@program.Cost</td>                        
                        @*<td><a class="glyphicon glyphicon-eye-open" asp-controller="program" asp-action="FullView" asp-route-id="@program.Id"></a></td>*@
                        <td><a class="glyphicon glyphicon-edit" asp-controller="program" asp-action="update" asp-route-id="@program.Id"></a></td>
                        <td><a class="glyphicon glyphicon-remove text-danger" asp-controller="program" asp-action="delete" asp-route-id="@program.Id"></a></td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>