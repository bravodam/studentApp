@model ProgramViewModel

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewBag.Title = "Update A Program";
}

<div class="panel panel-default">
    <div class="panel-heading main-color-bg">
        <h3 class="panel-title">Create a new Program</h3>
    </div>
    <form asp-controller="Program" asp-action="edit" method="post" class="mt-3 panel-body">
        @*<input asp-for="studentID" class="form-control" /><span class="text-danger" asp-validation-for="studentID"></span>*@

        <div class="form-group row">
            <label asp-for="ProgramName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10"><select asp-for="ProgramName" asp-items="Html.GetEnumSelectList<programName>()" class="form-control"></select></div>
        </div>
        <div class="form-group row">
            <label asp-for="duration" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10"><select asp-for="duration" asp-items="Html.GetEnumSelectList<programDuration>()" class="form-control"></select></div>
        </div>

        <div class="form-group row">
            <label asp-for="cost" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="cost" class="form-control" /><span class="text-danger" asp-validation-for="cost"></span>
            </div>
        </div>
        @*<div class="form-group row">
                <label asp-for="cost_type" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10"><select asp-for="cost_type" asp-items="Html.GetEnumSelectList<addmissionType>()" class="form-control"></select></div>
            </div>*@

        <div class="form-group row">
            <div class="col-sm-6"><button type="submit" class="form-group btn btn-success">update Program</button></div>
        </div>
    </form>
</div>