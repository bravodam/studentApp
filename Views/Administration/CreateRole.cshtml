@model CreateRoleViewModel

@{
    Layout = "~/Views/Shared/_loginLayout.cshtml";
    ViewBag.Title = "Create New Role";
}

<h1>Create new Role</h1>
<div class="row">
    <div class="col-md-12">
        <form asp-controller="Administration" asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName"></label>
                <input asp-for="RoleName" class="form-control" /><span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            
            <div class="col-sm-6">
                <input type="submit" value="Create Role" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>